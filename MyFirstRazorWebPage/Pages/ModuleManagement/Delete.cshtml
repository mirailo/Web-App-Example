@page
@model MyFirstRazorWebPage.Pages.ModuleManagement.DeleteModel

@{
    ViewData["Title"] = "Admin Page - Delete Module";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete</title>
</head>
<body>
    <h1 style="text-align:center">Admin Page : Delete Module</h1>
    <hr />


    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>Modules</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Modules.ModCode)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Modules.ModCode)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Modules.ModName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Modules.ModName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Modules.ModLevel)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Modules.ModLevel)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Modules.ModSemester)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Modules.ModSemester)
            </dd>
        </dl>

        <form method="post">
            <input type="hidden" asp-for="Modules.ID" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-page="./Index">Back to List</a>
        </form>
    </div>
</body>
</html>
