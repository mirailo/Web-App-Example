@page
@model MyFirstRazorWebPage.Pages.ServiceManagement.EditModel

@{
    ViewData["Title"] = "Admin Page - Edit Module";
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>

    <h1 style="text-align:center">Admin Page : Edit Module</h1>
    <hr />

    <h4>Services</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Services.ID" />
                <div class="form-group">
                    <label asp-for="Services.ServiceCode" class="control-label"></label>
                    <input asp-for="Services.ServiceCode" class="form-control" />
                    <span asp-validation-for="Services.ServiceCode" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Services.ServiceName" class="control-label"></label>
                    <input asp-for="Services.ServiceName" class="form-control" />
                    <span asp-validation-for="Services.ServiceName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Services.ServiceDuration" class="control-label"></label>
                    <input asp-for="Services.ServiceDuration" class="form-control" />
                    <span asp-validation-for="Services.ServiceDuration" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Services.ServicePrice" class="control-label"></label>
                    <input asp-for="Services.ServicePrice" class="form-control" />
                    <span asp-validation-for="Services.ServicePrice" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-page="./Index">Back to Module List</a> |
        <a asp-page="/AdminPage/AdminLogout">Logout</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</body>
</html>