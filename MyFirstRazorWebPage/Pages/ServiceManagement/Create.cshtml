@page
@model MyFirstRazorWebPage.Pages.ModuleManagement.CreateModel

@{
    ViewData["Title"] = "Staff Page - Add Service";
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>

    <h1 style="text-align:center">Staff Page : Add Service</h1>
    <hr />

    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Services.ServiceCode" class="control-label"></label>
                    <input asp-for="Services.ServiceCode" class="form-control" />
                    <span asp-validation-for="Services.ServiceCode" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Services.ServiceName" class="control-label"></label>
                    <input asp-for="Services.ServiceName" class="form-control" />
                    <span asp-validation-for="Services.ServiceName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Services.ServiceDuration" class="control-label"></label>

                        @Html.DropDownListFor(m => m.Services.ServiceDuration, new SelectList(Model.Time), "Select Time (minutes)", new { @class = "form-control" })

                    <span asp-validation-for="Services.ServiceDuration" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Services.ServicePrice" class="control-label"></label>

                    @Html.DropDownListFor(m => m.Services.ServicePrice, new SelectList(Model.Price), "Select Price (pounds)", new { @class = "form-control" })


                    <span asp-validation-for="Services.ServicePrice" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Add New Service" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-page="Index">Back to Staff List</a> |
        <a asp-page="/StaffPage/Index" asp-page-handler="OnGetLogout">Staff Homepage</a>|
        <a asp-page="/StaffPage/AdminLogout">Logout</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }



</body>
</html>
