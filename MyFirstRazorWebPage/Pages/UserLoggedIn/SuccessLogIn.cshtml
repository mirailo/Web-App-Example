@page
@model MyFirstRazorWebPage.Pages.UserLoggedIn.SuccessLogInModel


@{
    ViewData["Title"] = "User Page";
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>User Page</title>
</head>

<body>


    <h1 style="text-align:center">Welcome @Model.UserName</h1>

    <div>
        <img id="displayImg" src="~/Images/@Model.pathPicture" alt="Image not found" style=" max-width:180px;" class="rounded" /><br>
        <p>
            @{

                if (Model.pathPicture == "DefaulPic.jpeg")
                {
                    var text = "Customer, you do not have a set recommended hair product yet. Please contact staff if you have already had your first hair consultation, or require a consultation.";
                    Console.WriteLine(text);
                    @: @text


                    Model.pathPicture = "DefaulPic.jpeg";
                    Console.WriteLine("After defaultted : " + Model.pathPicture);
                }

            }
        </p>
    </div>

    <div>
        <a asp-page="/CustomerService/CustomerProfile">View/Update Customer Profile</a>|
        <a asp-page="/CustomerService/ViewBookedService">View Booked Appointments</a>|
        <a asp-page="/CustomerService/BookService">Book An Appointment</a>|
        <a asp-page="/CustomerService/CancelService">Cancel Appointment</a>|
        <a asp-page="/UserLoggedIn/UserLogout">Logout</a>
    </div>

</body>

</html>