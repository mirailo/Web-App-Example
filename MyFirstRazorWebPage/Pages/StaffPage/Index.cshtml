@page
@model MyFirstRazorWebPage.Pages.StaffPage.IndexModel

@{
    ViewData["Title"] = "Staff Page";
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Staff Page - Index</title>
</head>
<body>
    <p>
        <h1 style="text-align: center;">Staff Page -Welcome @Model.UserName</h1>
    </p>
    <table class="table col-auto">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.StaffUser[0].StaffNo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StaffUser[0].FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StaffUser[0].StaffUserName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StaffUser[0].StaffPassword)
                </th>
                <th>
                   Action
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.StaffUser)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.StaffNo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StaffUserName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StaffPassword)
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                        <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                        <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>


    <div>
        <a asp-page="/StaffPage/CustomerDetails1">Manage Customers</a> |
        <a asp-page="/StaffPage/Create">Create Staff</a> |
        <a asp-page="/ServiceManagement/Index">Manage Services</a> |
        <a asp-page="/StaffPage/WelcomePage">Manage Welcome Page Message</a> |
        <a asp-page="/StaffPage/AdminLogout">Logout</a>

    </div>
</body>
</html>
