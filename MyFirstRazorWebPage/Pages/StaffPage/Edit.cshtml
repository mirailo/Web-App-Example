@page
@model MyFirstRazorWebPage.Pages.StaffPage.EditModel

@{
    ViewData["Title"] = "Staff Page - Edit Staff Details";
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>

    <h4>Edit Staff Details</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="StaffUser.ID" />
                <div class="form-group">
                    <label asp-for="StaffUser.StaffNo" class="control-label"></label>
                    <input asp-for="StaffUser.StaffNo" class="form-control" />
                    <span asp-validation-for="StaffUser.StaffNo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="StaffUser.FirstName" class="control-label"></label>
                    <input asp-for="StaffUser.FirstName" class="form-control" />
                    <span asp-validation-for="StaffUser.FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="StaffUser.StaffUserName" class="control-label"></label>
                    <input asp-for="StaffUser.StaffUserName" class="form-control" />
                    <span asp-validation-for="StaffUser.StaffUserName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="StaffUser.StaffPassword" class="control-label"></label>
                    <input asp-for="StaffUser.StaffPassword" class="form-control" />
                    <span asp-validation-for="StaffUser.StaffPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-page="./Index">Back to List</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</body>
</html>
