@page
@model MyFirstRazorWebPage.Pages.CustomerService.CancelServiceModel
@{
    ViewData["Title"] = "Cancel Appointment";
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Cancel Appointment</title>
</head>
<body>

    <div>
        <h4>Cancel Appointment for @Model.UserName</h4>
        <hr />
    </div>

    <div>
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.ServiceRecords[0].ServiceCode)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ServiceRecords[0].ServiceName)
                        </th>
                        <th>
                            Select Appointment to Cancel
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            <input type="hidden" asp-for="@Model.UserEmail" class="control-label" />
                        </td>
                    </tr>
                    @for (int i = 0; i < Model.ServiceRecords.Count(); i++)
                    {
                        <tr>
                            <td>
                                <input type="hidden" asp-for="@Model.ServiceRecords[i].ServiceCode" class="control-label" />
                                @Model.ServiceRecords[i].ServiceCode
                            </td>
                            <td>
                                <input type="hidden" asp-for="@Model.ServiceRecords[i].ServiceName" class="control-label" />
                                @Model.ServiceRecords[i].ServiceName

                            </td>
                            <td>
                                @Html.CheckBoxFor(model => model.IsSelect[i], new { @class = "form-control" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="form-group">
                <input type="submit" value="Cancel Appointment" class="btn btn-primary" />
            </div>
        </form>
    </div>

    <div>

        <a asp-page="/UserLoggedIn/SuccessLogIn">Customer Homepage</a>|
        <a asp-page="/CustomerService/ViewBookedServices" asp-page-handler="OnGetLogout">View Booked Appointments</a>|
        <a asp-page="/UserLoggedIn/UserLogout">Logout</a>
    </div>
</body>
</html>