@page
@model MyFirstRazorWebPage.Pages.Customers.CreateModel
@{
    ViewData["Title"] = "Registration Page";
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>

    <h1>New Customer Registration Page</h1>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Customer.FirstName" class="control-label">First Name</label>
                    <input asp-for="Customer.FirstName" class="form-control" />
                    <span asp-validation-for="Customer.FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Customer.EmailAdd" class="control-label">Email Address</label>
                    <input asp-for="Customer.EmailAdd" class="form-control" />
                    <span asp-validation-for="Customer.EmailAdd" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Customer.Password" class="control-label">Insert Password</label>
                    <input asp-for="Customer.Password" class="form-control" />
                    <span asp-validation-for="Customer.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-page="CustomerLogin">Already a customer? Login Here</a>
      
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</body>
</html>
