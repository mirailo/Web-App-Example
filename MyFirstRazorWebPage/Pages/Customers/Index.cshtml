@page
@model MyFirstRazorWebPage.Pages.Customers.IndexModel
@{
    ViewData["Title"] = "Sign Up Page";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>

    <h1 style="text-align:center">List of Users Page</h1>
    <p>
        <a asp-page="Create">Create User</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    <!--@Html.DisplayNameFor(model => model.User[0].FirstName)-->
                    First Name
                </th>
                <th>
                    <!--@Html.DisplayNameFor(model => model.User[0].EmailAdd)-->
                    Email Address
                </th>
                <th>
                    <!--@Html.DisplayNameFor(model => model.User[0].Password)-->
                    Password
                </th>
                <th>
                    Actions
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.User)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EmailAdd)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Password)
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                        <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                        <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
